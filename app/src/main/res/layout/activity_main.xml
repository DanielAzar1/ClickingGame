<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/redBtn"
        android:layout_width="160dp"
        android:layout_height="69dp"
        android:layout_marginBottom="84dp"
        android:backgroundTint="#DF1414"
        android:onClick="redClick"
        android:text="Click!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/blueBtn"
        android:layout_width="160dp"
        android:layout_height="69dp"
        android:layout_marginTop="84dp"
        android:backgroundTint="#602BFF"
        android:text="Long click!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/scoreboardBtn"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:onClick="goSb"
        android:text="scoreBoard"
        app:layout_constraintBottom_toTopOf="@+id/redBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blueBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>